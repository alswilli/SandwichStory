<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="thesandwichguys.sandwichstory.MainActivity$PlaceholderFragment">

        <EditText
            android:id="@+id/editName"
            android:layout_width="192dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Sandwich Name"
            android:inputType="textCapWords"
            android:maxLength="44"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/ingredientList"
            android:layout_width="320dp"
            android:layout_height="183dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="17dp"
            android:text="Add Ingredient:"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredientList"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/qtySpinner"
            android:layout_width="41dp"
            android:layout_height="24dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/ingredientList"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/fracSpinner"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:background="@android:color/darker_gray"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/ingredientList"
            app:layout_constraintLeft_toRightOf="@+id/qtySpinner"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/measurement_spinner"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toRightOf="@+id/fracSpinner"
            app:layout_constraintTop_toBottomOf="@+id/ingredientList" />

        <EditText
            android:id="@+id/ingredient_name"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="34dp"
            android:ems="10"
            android:hint="Ingredient name"
            android:inputType="textCapWords"
            android:maxLength="44"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/ingredientList"
            app:layout_constraintLeft_toRightOf="@+id/measurement_spinner"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/add"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="34dp"
            android:text="+"
            app:layout_constraintLeft_toRightOf="@+id/ingredient_name"
            app:layout_constraintTop_toBottomOf="@+id/ingredientList" />

        <Button
            android:id="@+id/add_photo_button"
            android:layout_width="88dp"
            android:layout_height="78dp"
            android:text="Add Photo"
            android:layout_marginStart="50dp"
            app:layout_constraintLeft_toRightOf="@+id/sandwich_picture"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

        <ImageView
            android:id="@+id/sandwich_picture"
            android:layout_width="86dp"
            android:layout_height="78dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2"
            android:layout_marginLeft="82dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="82dp" />

        <EditText
            android:id="@+id/enterInstructions"
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="26dp"
            android:background="@android:color/darker_gray"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Enter recipe instructions"
            android:inputType="textMultiLine"
            android:maxLength="500"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sandwich_picture"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:text="Vegan"
            app:layout_constraintRight_toLeftOf="@+id/checkBox3"
            app:layout_constraintTop_toBottomOf="@+id/fracSpinner" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:text="Vegetarian"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="@+id/measurement_spinner"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/measurement_spinner"
            android:layout_marginStart="20dp" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="15dp"
            android:text="Gluten Free"
            app:layout_constraintLeft_toRightOf="@+id/checkBox3"
            app:layout_constraintTop_toBottomOf="@+id/ingredient_name" />

        <Button
            android:id="@+id/addSandwichBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="SAVE SANDWICH"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterInstructions" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

